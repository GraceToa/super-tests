<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#dcad21" />
            <gradient android:angle="-90" android:startColor="#c69908" android:endColor="#f1d186"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a4a3a1" />
            <solid android:color="#666563"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#666563" />
            <gradient android:angle="-90" android:startColor="#e2e1dd" android:endColor="#a4a3a1" />
        </shape>
    </item>
</selector>